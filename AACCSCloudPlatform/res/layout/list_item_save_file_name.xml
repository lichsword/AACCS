<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="10dip" android:layout_width="fill_parent"
	android:layout_height="60dip">
	<ImageView android:id="@+id/iconFolderImageView"
		android:background="@drawable/geek_icon" android:layout_height="wrap_content"
		android:layout_width="wrap_content" />
	<TextView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_toRightOf="@+id/iconFolderImageView"
		android:id="@+id/folderNameTextView" android:textSize="20dip"
		android:layout_marginLeft="5dip" android:marqueeRepeatLimit="marquee_forever"
		android:ellipsize="marquee" android:singleLine="true"
		android:layout_centerVertical="true" />
</RelativeLayout>
